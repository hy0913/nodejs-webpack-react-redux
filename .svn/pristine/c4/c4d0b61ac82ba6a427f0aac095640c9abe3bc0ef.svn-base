.event{
	.top{
	  	padding: 16px 20px;
	 	min-height: 70px;
	 	vertical-align: middle;
	 	.verw{
	 		display: inline-block;
	 		padding: 0 10px;
	 	}
	 	.vera h4{
	 		border-left:2px solid #88B7E0;
	 		padding-left: 10px;
	 	}
	 	.verb{
	 		float: right;
	 		padding-right: 20px; 		
	 	}
	 	.verc{
	 		float: right;
	 		margin-left:10px;
	 	}
	}
	.bottom{
		padding: 0px 20px;
		width: 100%;
		.row1{
		    background: #F5F6FA;
		    width: 100%;
		    height: 40px;
		    border: 1px solid #ddd;
		    border-bottom: none;
		    position: relative;
		    .l1{	
	    	    height: 100%;
	    	    width: 68%;
			    display: inline-block;
			    line-height: 39px;
			    vertical-align: top;
			    font-size: 16px;
			    margin-left: 14px;
		    }
		    .l2{
		    	vertical-align: top;
		    	cursor: text;
			    color: #555 !important;
		        height: 39px;
			    border-radius: 0px;
			    padding: 6px;
			    -webkit-transition: none;
			    transition: none;
			    font-size: 12px;
		        display: inline-block;
		        .in{
	        	    height: 32px;
				    border-radius: 0px;
				    -webkit-transition: none;
				    transition: none;
				    font-size: 12px;
		        }
		    }
		    .l3{
		    	vertical-align: top;
		    	padding: 6px;
		    	display: inline-block;
		    	.btn1{
		    		margin-right:15px;
		    	}
		    }
		}
		.row1:before{
		    content: '';
		    display: inline-block;
		    width: 4px;
		    background-color: #6D7781;
		    height: 100%;
		}
		.row2{
			.tableContent {
				border: 1px solid #ddd;
				border-bottom: none;
			}
			.tableFooter {
				height: 40px;
				background-color: #F9F9FB;
	    		border: 1px solid #ddd;
	    		border-top: none;
			}
		}	
		.row3{
			float: right;
			margin-top: 10px;
		}
	}
